<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xixi.ui.user.ProfileActivity">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:id="@+id/ll_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.xixi.widget.CircleImageView
            android:id="@+id/im_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nickname"
        style="@style/item_tv_tv">

        <TextView
            style="@style/item_tv_tv_left"
            android:text="@string/txt_nickname"/>

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/item_tv_tv_right"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sex"
        style="@style/item_tv_tv"
        android:layout_marginTop="1dp">

        <TextView
            style="@style/item_tv_tv_left"
            android:text="@string/txt_sex"/>

        <TextView
            android:id="@+id/tv_sex"
            style="@style/item_tv_tv_right"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_age"
        style="@style/item_tv_tv"
        android:layout_marginTop="1dp">

        <TextView
            style="@style/item_tv_tv_left"
            android:text="@string/txt_age"/>

        <TextView
            android:id="@+id/tv_age"
            style="@style/item_tv_tv_right"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_school"
        style="@style/item_tv_tv"
        android:layout_marginTop="1dp">

        <TextView
            style="@style/item_tv_tv_left"
            android:text="@string/txt_school"/>

        <TextView
            android:id="@+id/tv_school"
            style="@style/item_tv_tv_right"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_label"
        style="@style/item_tv_tv"
        android:layout_marginTop="1dp">

        <TextView
            style="@style/item_tv_tv_left"
            android:text="@string/txt_label"/>

        <TextView
            android:id="@+id/tv_label"
            style="@style/item_tv_tv_right"/>

    </LinearLayout>

</LinearLayout>
