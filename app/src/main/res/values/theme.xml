<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- universal -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_deep</item>
        <item name="colorPrimaryDark">@color/blue_deep</item>
        <item name="colorAccent">@color/blue_mid</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="textAppearanceLargePopupMenu">
            @style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large
        </item>
    </style>

    <!-- below SDK 19 -->
    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>